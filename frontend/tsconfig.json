{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backup-*/**",
    "cypress-legacy/**",
    "src/__tests__/**",
    "src/__mocks__/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test-*.ts",
    "src/app/(authenticated)/(sales)/**",
    "src/app/sales/**",
    "src/app/*/*/engineer-proposals/**",
    "src/lib/api/sales/**"
  ]
}
