# Frontend Environment Variables Example
# Copy this file to .env.local and update the values

# API Configuration
# Legacy: Full API URL (後方互換性のため残す)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# New: Separated API configuration (推奨)
NEXT_PUBLIC_API_HOST=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1

# Feature Flags (true/false)
# 職務経歴の個別保存機能
NEXT_PUBLIC_INDIVIDUAL_WORK_HISTORY_SAVE=false

# 職務経歴の自動保存機能
NEXT_PUBLIC_WORK_HISTORY_AUTO_SAVE=false

# 職務経歴のリアルタイム同期
NEXT_PUBLIC_WORK_HISTORY_REAL_TIME_SYNC=false

# 職務経歴のバージョン管理
NEXT_PUBLIC_WORK_HISTORY_VERSION_CONTROL=false

# AI支援機能
NEXT_PUBLIC_AI_ASSISTANCE=false

# 高度な検索機能
NEXT_PUBLIC_ADVANCED_SEARCH=false

# 一括操作機能
NEXT_PUBLIC_BULK_OPERATIONS=false

# エクスポート機能
NEXT_PUBLIC_EXPORT_FEATURE=true

# デバッグモード
NEXT_PUBLIC_DEBUG_MODE=false

# AWS Cognito Configuration
NEXT_PUBLIC_COGNITO_REGION=ap-northeast-1
NEXT_PUBLIC_COGNITO_USER_POOL_ID=your_user_pool_id
NEXT_PUBLIC_COGNITO_CLIENT_ID=your_client_id

# Google Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry Configuration (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# Other Configuration
NEXT_PUBLIC_APP_NAME=Monstera
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development